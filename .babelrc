{
    "env": {
        "dev": {
            "presets": ["es2015", "stage-1"]
        },
        "test": {
            "presets": ["es2015", "stage-1"],
            "plugins": [
                [
                    "istanbul",
                    {
                        "exclude": ["**/*.spec.js"]
                    }
                ]
            ]
        },
        "test-ci": {
            "presets": ["es2015", "stage-1"],
            "plugins": [
                [
                    "istanbul",
                    {
                        "exclude": ["**/*.spec.js"]
                    }
                ]
            ]
        },
        "production": {
            "presets": [
                ["es2015", {"modules": "umd"}],
                "stage-1"
            ],
            "plugins": [
                "external-helpers",
                "external-helpers-insert-require"
            ]
        }
    },
    "comments": false
}
