.sm-date-picker-month-carousel
    display: flex
    height: 48px
    padding: 0 8px
    align-items: center

    >label
        display: flex;
        flex: 1 1 auto
        align-items: center
        justify-content: center

    &-prev,
    &-next
        position: relative
        width: 48px
        height: @width
        display: flex
        align-items: center
        justify-content: center
        flex: 0 0 auto
        border-radius: 50%
        overflow: hidden
        cursor: pointer;

        .sm-icon
            width: 32px
            height: 32px
            line-height: 32px
            text-align: center

        .sm-ripple
            background-color: rgba(0, 159, 147, .7)
