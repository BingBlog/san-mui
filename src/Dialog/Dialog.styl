.sm-mask-show
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, .3);
    z-index: 999
.sm-mask-hide,
.sm-dialog-hide
    display: none
.sm-dialog-wrapper
    position: fixed
    left: 50%
    top: 50%
    width: 75%
    max-width: 768px
    z-index: 1000
    -webkit-transform: translate3d(-50%,-50%,0)
    transform: translate3d(-50%,-50%,0)
    .sm-dialog
        width: 100%
        padding: 0
        background-color: #fff
        border-radius: 2px
        font-size: 16px
        .sm-dialog-title
            display: flex
            -webkit-box-align: center
            -webkit-box-pack: justify
            padding: 24px 24px 20px
            font-size: 22px
            font-weight: 400
            line-height: 22px
            color: rgba(0,0,0,.87)
            + .sm-dialog-body
                padding-top: 0
        .sm-dialog-body
            overflow: hidden
            max-height: none
            padding: 0 24px 20px
            color: rgba(0,0,0,.6)
        .sm-dialog-actions
            min-height: 48px;
            padding: 8px;
            display: flex;
            align-items: center;
            justify-content: flex-end;