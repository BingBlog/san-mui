@require '../css/variable.styl';
@require '../css/func.styl';
@require '../Mask/Mask.styl';

.sm-dialog
    position: fixed
    left: 50%
    top: 50%
    width: 75%
    max-width: 768px
    z-index: $san-z-index.dialog
    -webkit-transform: translate3d(-50%,-50%,0)
    transform: translate3d(-50%,-50%,0)
    box-shadow: san-shadow('2')
    background-color: #fff

    &-title
        display: flex
        align-items: center
        justify-content: space-between
        margin: 0
        padding: 24px 24px 20px
        font-size: 22px
        font-weight: 400
        line-height: 22px
        color: rgba(0, 0, 0, .87)

    &-body
        overflow: hidden
        max-height: none
        padding: 20px 24px 24px
        color: rgba(0, 0, 0, .6)

    &-actions
        min-height: 36px;
        padding: 8px;
        display: flex;
        align-items: center;
        justify-content: flex-end;

    &-title ~ &-body
        padding-top: 0
