@require '../css/variable.styl'

.upload
    height: 30px
    width: 90px
    position: relative
    text-align: center
    line-height: 30px
    input
        position: absolute
        left: 0
        width: 100%
        height: 100%
        opacity: 0
.file-list
    width: 100%
    display: inline-block
    position: relative
    .progress
        display: inline-block
        position: absolute
        width: 80%
        height: 3px
        background: green
        left: 0px
        bottom: 0px



