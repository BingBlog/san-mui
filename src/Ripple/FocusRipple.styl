@require '../css/variable.styl'
@require '../css/func.styl'

.sm-focus-ripple
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    overflow: hidden

.sm-focus-ripple-circle
    position: absolute
    height: 100%
    width: 100%
    border-radius: 50%
    opacity: 0.16
    background-color: currentColor
    animation: sm-pulsate 750ms $san-animation-ease-in-out
    animation-iteration-count: infinite
    animation-direction: alternate

@keyframes sm-pulsate
    0%
        transform: scale(0.72)

    100%
        transform: scale(0.85)

