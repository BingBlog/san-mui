@import '../css/variable.styl'
@require '../css/func.styl'

$san-appbar-bgcolor := $san-primary-color
$san-appbar-textcolor := $md-colors.white

.sm-appbar
    display: flex
    height: rem(64px)
    line-height: rem(64px)
    padding: 0 18px
    background: $san-appbar-bgcolor
    color: $san-appbar-textcolor

    .material-icons
        line-height: rem(64px)

.sm-appbar-left,
.sm-appbar-right
    height: 100%
    display: flex
    justify-content: flex-start
    align-items: center

.sm-appbar-title
    flex: 2
    padding-left: 8px
    padding-right: 8px
