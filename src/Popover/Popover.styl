/**
 * @file Popover style
 * @author leon <ludafa@outlook.com>
 */

.sm-popover

    &-content
        position: absolute;
        transition: transform 400ms cubic-bezier(0.23, 1, 0.32, 1), opacity 400ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
        transform: scale(0, 0);
        transform-origin: 0 0;
        opacity: 0

    &.state-open &-content
        transform: scale(1, 1);
        opacity: 1

    &.state-open.state-closing &-content
        transform: scale(0, 0);
        opacity: 0;
